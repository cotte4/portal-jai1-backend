# ===========================================
# Portal JAI1 Backend - TEST Environment
# ===========================================
# This file is used for integration tests with Docker PostgreSQL
# Start the test DB: docker-compose -f docker-compose.test.yml up -d

# Test Database (Docker PostgreSQL on port 5433)
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/portal_jai1_test
DIRECT_URL=postgresql://test_user:test_password@localhost:5433/portal_jai1_test

# Supabase (mocked in tests, but needed for imports)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_KEY=test-service-key

# JWT Authentication (test values)
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-32chars

# Token Expiration Settings
JWT_ACCESS_EXPIRY=15m
JWT_ACCESS_EXPIRY_REMEMBER=7d
JWT_REFRESH_EXPIRY=7d
JWT_REFRESH_EXPIRY_REMEMBER=30d
OAUTH_CODE_TTL=5m

# Email (disabled in tests)
EMAIL_PROVIDER=resend
RESEND_API_KEY=test-resend-key
EMAIL_FROM=test@portaljai1.com

# Encryption (test key - DO NOT use in production)
ENCRYPTION_KEY=test-encryption-key-32-bytes!!!!

# Webhooks (test key)
MAKE_API_KEY=test-make-api-key

# Sentry (disabled in tests)
SENTRY_DSN=

# Application
PORT=3001
NODE_ENV=test
FRONTEND_URL=http://localhost:4200

# Storage Cleanup (disabled in tests)
STORAGE_CLEANUP_ENABLED=false
